import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JTabbedPane;


public class MessagePanel extends JPanel
{
	
	public MessagePanel(){
		super(new BorderLayout());
		
		JTabbedPane tabs = new JTabbedPane();
		
		JPanel genPanel = new JPanel();genPanel.add(new JButton("sdfsdfsdf"));
		JPanel solvePanel = new JPanel();genPanel.add(new JButton("dsfsdfsdfdsf"));
		tabs.addTab("<html><body marginwidth=15 marginheight=5><h1>Tab1</h1></body></html>",genPanel);
		tabs.addTab("Solve",solvePanel);
		
		
		
		tabs.setTabLayoutPolicy(JTabbedPane.SCROLL_TAB_LAYOUT);
		this.add(tabs);
		this.setVisible(true);
	}
	
}
