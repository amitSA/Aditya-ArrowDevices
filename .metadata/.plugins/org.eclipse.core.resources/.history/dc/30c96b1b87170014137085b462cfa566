import java.awt.Color;
import java.awt.Desktop;
import java.awt.Dimension;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;
import java.io.File;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JSlider;
import javax.swing.JTextField;

public class SolvePanel extends JPanel {

	JLabel [] labels;
	JTextField [] textFields;
	JButton solveButt;
	JButton openButt;  // equivalent to GeneratePanel's openButton
	
	public SolvePanel() {
		super(new GridBagLayout());
		
		labels = new JLabel[]{new JLabel("File to read from: "),new JLabel("File to store output: ")};
		
		textFields = new JTextField[]{new JTextField("input.txt"),new JTextField("solution.txt")};
		for(int i = 0;i<textFields.length;i++)
			textFields[i].setEditable(false);
		
		solveButt = new JButton("Solve");
		openButt = new JButton("Open File");
		
		GridBagConstraints c = new GridBagConstraints();
		c.insets = new Insets(5,0,5,0);
		c.gridx = 0;
		c.gridy = 0;
		c.gridwidth = 2;
		c.fill = GridBagConstraints.HORIZONTAL;
		c.anchor = GridBagConstraints.LINE_START;
		//adding the labels
		this.add(labels[0],c);
		c.gridy = 1;
		this.add(labels[1],c);
		
		//adding the TextAreas
		c.gridx = 2;
		c.gridy = 0;
		c.gridwidth = 1;
		this.add(textFields[0]);
		c.gridy = 1;
		c.gridx = 3;
		this.add(textFields[1],c);
	}
}
